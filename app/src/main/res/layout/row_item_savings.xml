<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Savings_Row_Items">

    <RelativeLayout
        android:id="@+id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/line_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome betÃ©t"
            style="@style/Savings_Row_Item_TextView_1"/>
        <TextView
            android:id="@+id/line_g"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            style="@style/Savings_Row_Item_TextView_4"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LinLay2"
        android:layout_below="@+id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/line_b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expire"
            style="@style/Savings_Row_Item_TextView_2"/>


        <TextView
            android:id="@+id/line_b"
            style="@style/Savings_Row_Item_TextView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/line_b0"
            android:layout_toRightOf="@id/line_b0"
            android:text="2019-05-05" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="end">
            <TextView
                android:id="@+id/line_e"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678"
                style="@style/Savings_Row_Item_TextView_5a"/>

            <TextView
                android:id="@+id/line_f"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forint"
                style="@style/Savings_Row_Item_TextView_5b"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/LinLay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:gravity="end">
        <TextView
            android:id="@+id/line_c"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate"
            style="@style/Savings_Row_Item_TextView_3"/>
        <TextView
            android:id="@+id/line_d"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1,85%"
            style="@style/Savings_Row_Item_TextView_3"/>

        <TextView
            android:id="@+id/line_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textStyle="italic"
            android:paddingStart="4sp"
            android:textSize="14sp"
            android:visibility="gone"/>


    </LinearLayout>

</RelativeLayout>