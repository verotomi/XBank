<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tamas.verovszki.xbank.NetBankMainActivity"
    android:background="@drawable/leafbackground30">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbar_2"
        android:orientation="vertical"
        android:gravity="center_vertical">
    <!-- Ez a LinearLayout kellett ide, hogy a tartalom középen legyen -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are logged in to your NetBank!"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="3"
        android:shadowDx="3"
        android:shadowRadius="3"
        android:layout_centerVertical="true"
        android:gravity="center"/>

    </LinearLayout>

</RelativeLayout>
