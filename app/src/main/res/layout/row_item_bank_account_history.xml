<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/BankAccountHistory_Row_Item">

    <RelativeLayout
        android:id="@+id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/line_a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eseti utalÃ¡s"
            style="@style/BankAccountHistory_Row_Item_TextView_1"/>
        <TextView
            android:id="@+id/line_a2"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-04-25"
            style="@style/BankAccountHistory_Row_Item_TextView_4"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LinLay2"
        android:layout_below="@id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/line_b1"
            android:layout_width="wrap_content"
