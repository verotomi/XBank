<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/RelLay1c"
        android:layout_below="@id/my_toolbar_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/contact_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_marginRight="30dp"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:background="@drawable/homepageredwithshadow"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/contact_icon"
            android:layout_marginStart="6dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homepage"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/contact_text2"
                android:layout_toRightOf="@id/contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homepage_address"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />
        </LinearLayout>


        <ImageButton
                android:id="@+id/imagebutton_web"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:background="@drawable/arrow2white" />


    </RelativeLayout>


</RelativeLayout>
