<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/BankAccountBalances_Row_Item">

    <RelativeLayout
        android:id="@+id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/line_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678-90123456-00000000"
            style="@style/BankAccountBalances_Row_Item_TextView_1"/>
        <TextView
            android:id="@+id/line_c"
            android:layout_toRightOf="@id/line_a"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"

            style="@style/BankAccountBalances_Row_Item_TextView_3"/>
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LinLay2"
        android:layout_below="@+id/LinLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/line_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lakossági folyószámla"
            style="@style/BankAccountBalances_Row_Item_TextView_2"
            />
            <TextView
                android:id="@+id/line_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678"
                android:layout_alignParentEnd="true"
                style="@style/BankAccountBalances_Row_Item_TextView_4"
                />
            <TextView
                android:id="@+id/line_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forint"
                android:layout_alignParentEnd="true"
                style="@style/BankAccountBalances_Row_Item_TextView_5"/>
    </RelativeLayout>

</RelativeLayout>